[user]
	email = mbrahimi@attraqt.com
	name = grep-mb 
[color]
	ui = true
[alias]
	a = "!git status --short | peco | awk '{print $2}' | xargs git add" 
	df = "!git hist | peco | awk '{print $2}' | xargs -I {} git difftool -y {}^ {}" 
	hist = log --pretty=format:\"%Cgreen%h %Creset%cd %Cblue[%cn] %Creset%s%C(yellow)%d%C(reset)\" --graph --date=relative --decorate --all
	llog = log --graph --name-status --pretty=format:\"%C(red)%h %C(reset)(%cd) %C(green)%an %Creset%s %C(yellow)%d%Creset\" --date=relative
	amend = commit --amend
	amendno = commit --amend --no-edit
	open = "!hub browse"
	type = cat-file -t
	dump = cat-file -p
	find = "!f() { git log --pretty=format:\"%h %cd [%cn] %s%d\" --date=relative -S'pretty' -S\"$@\" | peco | awk '{print $1}' | xargs -I {} git diff {}^ {}; }; f"
	# edit conflicted file on merge
	edit-unmerged = "!f() { git ls-files --unmerged | cut -f2 | sort -u ; }; nvim `f`"
	# add conflicted file on merge
	add-unmerged = "!f() { git ls-files --unmerged | cut -f2 | sort -u ; }; git add `f`"
	devtag = "!f() { TAG=$(git describe --abbrev=0 --tags); \
                   COUNTER=1; \
                   while git rev-parse $TAG.dev$COUNTER >/dev/null 2>&1; do \
                     let COUNTER=COUNTER+1; \
                   done; \
                   git tag $TAG.dev$COUNTER; \
                   git push origin $TAG.dev$COUNTER; \
                 }; f"
	rename = "!f() { git branch -m $(git branch --show-current) \"$1\"; }; f"
[hub]
	protocol = https
[github]
	user = grep-mb
[diff]
	tool = nvimdiff
[difftool "nvimdiff"]
	cmd = nvim -d \"$LOCAL\" \"$REMOTE\"
	path = 
[http]
	version = HTTP/1.1
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[init]
	defaultBranch = develop
